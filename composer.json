{
    "name": "los/request-id",
    "description": "PHP middleware to add a Request ID header",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Leandro Silva",
            "email": "lansoweb@hotmail.com"
        }
    ],
    "homepage": "https://github.com/lansoweb/request-id",
    "require": {
        "php": "^8.1",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-middleware": "^1.0 || ^2.0",
        "ramsey/uuid": "^4.1"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "laminas/laminas-diactoros": "^3.2",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^5.15"
    },
    "autoload": {
        "psr-4": {
            "Los\\RequestId\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Los\\RequestIdTest\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@phpstan",
            "@psalm",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse -l 4 src",
        "psalm": "psalm --show-info=true",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
